<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="460.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11"
            xmlns:fx="http://javafx.com/fxml/1"
            styleClass="scene-container"
            fx:controller="com.onionshop.controllers.ProjectExplorerController">
    <stylesheets>
        <URL value="@ProjectExplorer.css"/>
    </stylesheets>
    <HBox AnchorPane.leftAnchor="10.0"
          AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" styleClass="header-container">
        <Label text="Onionshop"  styleClass="heading">
        </Label>
        <Button text="Open" fx:id="btnOpen" onAction="#onBtnOpenClick"
                styleClass="open-new-btn" alignment="CENTER_RIGHT">
        </Button>
        <Button fx:id="btnNewProject" onAction="#onBtnNewProjectClick"
                text="New Onion" styleClass="open-new-btn" alignment="CENTER_RIGHT">
        </Button>
    </HBox>
    <VBox styleClass="most-recent-container" prefHeight="300.0"
          prefWidth="400.0" AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="50.0"
          spacing="20">
        <Label text="Fresh Onions" styleClass="most-recent-heading">
        </Label>

        <VBox styleClass="most-recent-item" onMouseClicked="#openMostRecentProject1">
            <Label fx:id="mostRecentName1" styleClass="most-recent-name"/>
            <Label fx:id="mostRecentPath1" styleClass="most-recent-path"/>
        </VBox>
        <VBox styleClass="most-recent-item" onMouseClicked="#openMostRecentProject2">
            <Label fx:id="mostRecentName2" styleClass="most-recent-name"/>
            <Label fx:id="mostRecentPath2" styleClass="most-recent-path"/>
        </VBox>
        <VBox styleClass="most-recent-item" onMouseClicked="#openMostRecentProject3">
            <Label fx:id="mostRecentName3" styleClass="most-recent-name"/>
            <Label fx:id="mostRecentPath3" styleClass="most-recent-path"/>
        </VBox>
        <VBox styleClass="most-recent-item" onMouseClicked="#openMostRecentProject4">
            <Label fx:id="mostRecentName4" styleClass="most-recent-name"/>
            <Label fx:id="mostRecentPath4" styleClass="most-recent-path"/>
        </VBox>
        <VBox styleClass="most-recent-item" onMouseClicked="#openMostRecentProject5">
            <Label fx:id="mostRecentName5" styleClass="most-recent-name"/>
            <Label fx:id="mostRecentPath5" styleClass="most-recent-path"/>
        </VBox>
    </VBox>
</AnchorPane>
