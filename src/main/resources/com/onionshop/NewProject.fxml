<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="450.0" prefWidth="450.0"
            style="-fx-background-color: #333;"
            xmlns="http://javafx.com/javafx/11"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.onionshop.controllers.NewProjectController">
    <children>
        <VBox AnchorPane.leftAnchor="20.0" AnchorPane.bottomAnchor="20.0"
              AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

            <Label text="Create New Project" textFill="WHITE" style="-fx-padding: 0 0 10px 0">
                <font>
                    <Font name="Comic Sans MS" size="20.0"/>
                </font>
            </Label>

            <Label text="Project Name" textFill="WHITE" style="-fx-padding: 7px 0">
                <font>
                    <Font name="Comic Sans MS" size="15.0"/>
                </font>
            </Label>
            <TextField fx:id="txtProjectName" prefWidth="200.0">
                <font>
                    <Font name="Comic Sans MS" size="12.0"/>
                </font>
            </TextField>

            <Label text="Canvas Properties" textFill="WHITE" style="-fx-padding: 7px 0 0">
                <font>
                    <Font name="Comic Sans MS" size="15.0"/>
                </font>
            </Label>

            <Label text="Width" textFill="ccc">
                <font>
                    <Font name="Comic Sans MS" size="12.0"/>
                </font>
            </Label>
            <TextField fx:id="txtCanvasWidth" prefWidth="200.0">
                <font>
                    <Font name="Comic Sans MS" size="12.0"/>
                </font>
            </TextField>

            <Label text="Height" textFill="ccc">
                <font>
                    <Font name="Comic Sans MS" size="12.0"/>
                </font>
            </Label>
            <TextField fx:id="txtCanvasHeight" prefWidth="200.0">
                <font>
                    <Font name="Comic Sans MS" size="12.0"/>
                </font>
            </TextField>

            <Label text="Directory" textFill="WHITE" style="-fx-padding: 7px 0">
                <font>
                    <Font name="Comic Sans MS" size="15.0"/>
                </font>
            </Label>

            <Button fx:id="btnChooseDir" onAction="#onBtnChooseDirClick" text="Choose Directory"
                    style="-fx-padding: 5px">
                <font>
                    <Font name="Comic Sans MS" size="12.0"/>
                </font>
            </Button>
            <Label fx:id="outDirName" text="Directory: " textFill="WHITE">
                <font>
                    <Font name="Comic Sans MS" size="12.0"/>
                </font>
            </Label>
            <Button fx:id="btnSubmit" onAction="#onBtnSubmitClick" text="Submit"
                    style="-fx-padding: 5px">
                <font>
                    <Font name="Comic Sans MS" size="12.0"/>
                </font>
            </Button>
        </VBox>
    </children>
</AnchorPane>
